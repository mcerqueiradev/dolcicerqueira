<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - wapp_dolcicerqueira</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/styles.css" asp-append-version="true" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.1/css/all.min.css" integrity="sha512-MV7K8+y+gLIBoVD59lQIYicR65iaqukzvf/nwasF0nqhPay5w/9lJmVM2hMDcnK1OnMGCdVK+iQrJ7lzPJQd1w==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/tailwindcss@3.0.9/dist/tailwind.min.css">
</head>
<body class="bg-card overflow-x-hidden p-0">
    <div id="header" class="w-full font-poppins">
        <div class="mx-auto flex max-w-screen-xl flex-col p-5 md:flex-row md:items-center md:justify-between md:px-6 lg:px-8">
            <div class="flex flex-row items-center justify-between">
                <a href="/" class="tracking-relaxed transform text-lg font-bold tracking-tighter text-pink transition duration-500 ease-in-out lg:pr-8 hover:no-underline hover:text-blue">dolci cerqueira</a>
            </div>

            <nav class="flex-grow flex-col items-center border-lightpink/40 pb-4 md:flex md:flex-row md:justify-end md:pb-0 lg:border-l-2 lg:pl-2">
                <a class="focus:shadow-outline mt-2 px-4 py-2 text-sm text-black/60 hover:text-pink focus:outline-none md:mt-0 hover:no-underline" asp-controller="Product" asp-action="GetAll">Products</a>
                <a class="focus:shadow-outline mt-2 px-4 py-2 text-sm text-black/60 hover:text-pink focus:outline-none md:mt-0 hover:no-underline" asp-controller="Recipe" asp-action="GetAll">Recipes</a>
                <a class="focus:shadow-outline mt-2 px-4 py-2 text-sm text-black/60 hover:text-pink focus:outline-none md:mt-0 hover:no-underline" href="#">About Us</a>
                <a class="focus:shadow-outline mt-2 px-4 py-2 text-sm text-black/60 hover:text-pink focus:outline-none md:mt-0 hover:no-underline" href="#">Contact</a>

                @if (AllModels.UserCheck != null)
                {
                    <div class="inline-flex list-none items-center gap-2 lg:ml-auto">
                        <a asp-area="" asp-controller="Home" asp-action="Dashboard" class="block transform items-center rounded-full bg-lightpink/30 px-10 py-2.5 text-center text-base font-medium text-pink/50 transition duration-500 ease-in-out focus:outline-none focus:ring-2 focus:ring-pink/40 focus:ring-offset-2 hover:no-underline hover:bg-pink hover:text-white">Go to Dashboard</a>                    
                    </div>
                }
                else
                {
                    <div class="inline-flex list-none items-center gap-2 lg:ml-auto">
                        <a class="block transform items-center rounded-full bg-lightpink/30 px-10 py-2.5 text-center text-base font-medium text-pink/50 transition duration-500 ease-in-out focus:outline-none focus:ring-2 focus:ring-pink/40 focus:ring-offset-2 hover:no-underline hover:bg-pink hover:text-white" asp-controller="Login" asp-action="Index">Sign in</a>
                        <a class="block transform items-center rounded-full bg-pink px-10 py-3 text-center text-base font-medium text-white transition duration-500 ease-in-out hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-pink/40 focus:ring-offset-2 hover:no-underline hover:bg-lightpink" asp-controller="User" asp-action="CreateAccount">Sign up</a>
                    </div>
                }



            </nav>
        </div>
    </div>
    @RenderBody()
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
